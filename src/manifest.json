{
  "manifest_version": 3,
  "name": "Prompt Library for ChatGPT",
  "version": "1.4.0",
  "description": "Personal prompt templates with dynamic variables and tone presets. Inject into ChatGPT.",
  "icons": {
    "16": "./icons/16.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  },
  "action": { 
    "default_popup": "popup/popup.html", 
    "default_title": "Prompt Library" 
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content/content.js"],
      "css": ["content/inject.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html"
}
